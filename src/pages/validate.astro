---
import Navbar from "../components/astro/Navbar.astro";
import Layout from "../layouts/Layout.astro";
import App from '../App';
export const prerender = true
---
<Layout title="Validate" >
    <section>
        <Navbar/>
        <div class="box_validate" >
            <div class="tittle" >
                <h2>valida tu email</h2>
                <p>vamos a verificar tu email para que puedas crear tu usuario o recupar tu constrase√±a</p>
            </div>
            <App page={'validate'} client:only="react" >
                <span slot="fallback" >cargando...</span>
            </App>
        </div>
    </section>
</Layout>

<style>
    section{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 90vh;
        width: 100%;
    }
    .tittle{
        margin-right: 20px;
        p{
            margin: 0;
            width: 400px;
        }
    }
    .box_validate{
        display: flex;
        align-items: center;
        border: solid 1px #ffffff;
        padding-block: 1rem;
        padding-inline: 2rem;
        border-radius: 20px;
    }
</style>