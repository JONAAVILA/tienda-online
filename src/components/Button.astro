---
const { url, children, color } = Astro.props
---

<a class={color} href={url}>
	<p>{children}</p>
</a>

<style>
	a{
		height: 45px;
		width: 220px;
		border-radius: 10px;
		color: #003550;
		text-decoration: none;
		display: flex;
		justify-content: center;
		align-items: center;
	}
	.gradient{
		background:radial-gradient(#60B49E,#41AFCB,#A1CED9);
	}
	.default{
		background-color: #FFFEFF;
		color: #003550;
	}
</style>
